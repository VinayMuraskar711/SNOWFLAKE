# Zerodha MCP Server Environment Configuration
# Copy this file to .env and fill in your credentials

# Zerodha API Credentials
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_ACCESS_TOKEN=your_access_token_here
ZERODHA_REQUEST_TOKEN=your_request_token_here

# Optional: User credentials for auto-login
ZERODHA_USER_ID=your_user_id_here
ZERODHA_PASSWORD=your_password_here
ZERODHA_TOTP_KEY=your_totp_key_here

# Server Configuration
ENABLE_STREAMING=true
ENABLE_ANALYTICS=true
ENABLE_RISK_MANAGEMENT=true

# Risk Management Settings
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=10000
MAX_PORTFOLIO_CONCENTRATION=20
MAX_LEVERAGE=3.0

# Database Configuration (Optional)
DATABASE_URL=sqlite:///zerodha_mcp.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=zerodha_mcp_server.log

# Telegram Bot Configuration (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
